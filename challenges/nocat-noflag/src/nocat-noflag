#!/usr/bin/env python3
import os

def main():
    print("Welcome to the Very Opinionated Shell Executor: We don't like cats or flags! ðŸ˜ˆ")
    print("Feel free to run *almost* anything. We totally promise it's safe! ðŸ˜‰")

    user_input = input("Enter your command: ").strip()

    # Check for forbidden words
    if "flag" in user_input.lower() or "cat" in user_input.lower():
        print("Nice try, hacker! But no sneaky business today. ðŸ˜œ")
        exit(1)

    print(f"Executing: {user_input} ... Good luck! ðŸš€")
    os.system(user_input)

    print("Execution finished! Hopefully, nothing exploded. ðŸ’¥")

if __name__ == "__main__":
    main()